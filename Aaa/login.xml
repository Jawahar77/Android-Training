<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:jawa="http://schemas.android.com/apk/res/android"
    jawa:layout_width="match_parent"
    jawa:layout_height="match_parent"
    jawa:orientation="vertical">

    <ImageView

        jawa:background="@color/black"
        jawa:layout_width="100dp"
        jawa:layout_height="100dp"
        jawa:layout_marginTop="150dp"
        jawa:layout_marginLeft="130dp"
        />

    <EditText
        jawa:hint="Email"
        jawa:inputType="textEmailAddress"
        jawa:layout_width="match_parent"
        jawa:layout_height="80dp"
        jawa:gravity="center"
        jawa:layout_marginTop="10dp"
        jawa:layout_marginLeft="15dp"
        jawa:layout_marginRight="15dp"/>

    <EditText
        jawa:inputType="textPassword"
        jawa:hint="password"
        jawa:layout_width="match_parent"
        jawa:layout_height="80dp"
        jawa:gravity="center"
        jawa:layout_margin="15dp"/>
    <Button
        jawa:text="login"
        jawa:background="@drawable/shape"
        jawa:layout_width="150dp"
        jawa:layout_height="70dp"
        jawa:layout_gravity="center"
        />
    <TextView
        jawa:id="@+id/movTOsign"
        jawa:layout_width="wrap_content"
        jawa:layout_height="wrap_content"
        jawa:text=" i don't have an account sign up"
        jawa:layout_gravity="center"
        jawa:layout_marginTop="30dp"/>

</LinearLayout>